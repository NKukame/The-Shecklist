generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  name      String
  email     String    @unique
  password  String
  isAdmin   Boolean   @default(false)
  createdAt DateTime  @default(now())
}

model Artist {
  id          String   @id @default(uuid())
  name        String
  thumbnail   String
  description String
  albums      Album[]
}

model Album {
  id          String   @id @default(uuid())
  title       String
  albumThumbnail       String
  releaseDate DateTime
  artistLabel       String
  author       String
  reviewSnippet       String
  score       String
  artistId    String
  artist      Artist   @relation(fields: [artistId], references: [id])
  genres      AlbumGenre[]
}

model Genre {
  id      String       @id @default(uuid())
  name    String       @unique
  albums  AlbumGenre[]
}

model AlbumGenre {
  albumId String
  genreId String

  album Album @relation(fields: [albumId], references: [id])
  genre Genre @relation(fields: [genreId], references: [id])

  @@id([albumId, genreId])
}
