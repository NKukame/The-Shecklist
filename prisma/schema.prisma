generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  name      String
  email     String    @unique
  password  String
  isAdmin   Boolean   @default(false)
  createdAt DateTime  @default(now())
}

model Artist{
  id        String    @id @default(uuid())
  name      String
  thumbnail String
  desrciption String
  genres      ArtistGenre[]
}

model Genre{
  id        String    @id @default(uuid())
  name      String    @unique
  artists   ArtistGenre[]
}

model ArtistGenre {
  artistId String
  genreId  String

  artist Artist @relation(fields: [artistId], references: [id])
  genre  Genre  @relation(fields: [genreId], references: [id])

  @@id([artistId, genreId]) 
}
